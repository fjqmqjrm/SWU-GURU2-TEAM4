<!-- res/drawable/profile_image_placeholder.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 원 형태의 배경 -->
    <item android:gravity="center">
        <shape android:shape="oval">
            <size
                android:width="150dp"
                android:height="150dp"/> <!-- 원하는 세로 크기로 조절 -->
            <solid android:color="#CCCCCC"/> <!-- 배경 색상 (회색 예시) -->
        </shape>
    </item>

    <!-- 이미지 아이콘 -->
    <item android:drawable="@drawable/img"/>
</layer-list>
