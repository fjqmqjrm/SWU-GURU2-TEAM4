<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/qanda_q_set"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/qanda_q_box"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#FEFEFE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/qanda_q_button" />

        <TextView
            android:id="@+id/qanda_q_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="25dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="TitleTitleTitleTitleTitle"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/qanda_q_box"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/qanda_isAnswered"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="@+id/qanda_q_box"
            app:layout_constraintTop_toTopOf="@+id/qanda_q_box"
            app:srcCompat="@drawable/qanda_answer_waiting" />

        <TextView
            android:id="@+id/qanda_q_content"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="contentcontentcontentcontentcontent"
            android:textColor="#797979"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/qanda_q_box"
            app:layout_constraintTop_toBottomOf="@+id/qanda_q_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>